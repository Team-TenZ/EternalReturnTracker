<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".fragments.CharacterFragment">


    <TextView
        android:id="@+id/tvCharacter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="-15dp"
        android:singleLine="true"
        android:text="Adele"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tvWinrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_alignStart="@+id/tvCharacter"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:text="Win Rate: 5%"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvTop5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWinrate"
        android:layout_alignStart="@+id/tvWinrate"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:text="Top 5 rate: 25%"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/tvAveragePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTop5"
        android:layout_alignStart="@+id/tvTop5"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:text="Average Place: #4.8"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/profileimage" />

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Rank: Diamond 3"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvSeasonWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRank"
        android:layout_alignStart="@+id/tvRank"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:text="Season Wins: 6 wins"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>