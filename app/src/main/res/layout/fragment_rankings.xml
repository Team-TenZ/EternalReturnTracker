<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".fragments.RankingsFragment">

    <TextView
        android:id="@+id/Leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Leaderboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:layout_centerHorizontal="false"
        tools:text="Leaderboard" />

    <TextView
        android:id="@+id/tvNumber1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Leaderboard"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="1 - Silvision" />

    <TextView
        android:id="@+id/tvNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber1"
        android:layout_alignStart="@+id/tvNumber1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber2"
        android:layout_alignStart="@+id/tvNumber2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber3"
        android:layout_alignStart="@+id/tvNumber3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber4"
        android:layout_alignStart="@+id/tvNumber4"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber5"
        android:layout_alignStart="@+id/tvNumber5"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber6"
        android:layout_alignStart="@+id/tvNumber6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber7"
        android:layout_alignStart="@+id/tvNumber7"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber8"
        android:layout_alignStart="@+id/tvNumber8"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="2 - Silvision" />

    <TextView
        android:id="@+id/tvNumber10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumber9"
        android:layout_alignStart="@+id/tvNumber9"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:text="10 - Silvision" />

</RelativeLayout>